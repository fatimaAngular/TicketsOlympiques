@model TicketsJO.Models.Discipline

@{
    ViewData["Title"] = "Modification Discipline";
}
<div class="text-center text-primery">
    <h1 class="display-6">Jeux olympiques Paris 2024</h1>
</div>


<div class="text-start display8 text-danger">
    <h4 class="display-6">Modification Discipline</h4>
</div>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <br

            <div class="form-group">
                <input type="submit" value="Enregistrer" class="btn btn-outline-primary btn-lg px-4 me-md-2 fw-bold" />
                <div>
                    <a asp-action="Index"> Retour à la liste</a>
                </div>
            </div>
            


        </form>
    </div>
</div>




@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
