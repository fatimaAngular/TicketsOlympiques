@model TicketsJO.ViewModels.EventViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Créer un évènement sportif</h1>

<h4>Renseigner les informations sur l'évènement</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label"></label>
                <input asp-for="Description" class="form-control" />
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateEvent" class="control-label"></label>
                <input asp-for="DateEvent" class="form-control" />
                <span asp-validation-for="DateEvent" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AdresseEvent" class="control-label"></label>
                <input asp-for="AdresseEvent" class="form-control" />
                <span asp-validation-for="AdresseEvent" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DisciplineName" class="control-label"></label>
                <select asp-for="IdDiscipline" class="form-control" />
                @foreach (var disciplineVm in Model.DisciplineVm)

                {
                    <option value="@disciplineVm.Id"> @disciplineVm.Name </option>
                }
                <select/>

                <div class="form-group">
                    <label asp-for="StatutEventName" class="control-label"></label>
                    <select asp-for="IDStatutEvent" class="form-control" />
                    @foreach (var statuteventVm in Model.StatutEventVm)
                    {
                        <option value="@statuteventVm.Id"> @statuteventVm.Name </option>
                    }
                    <select />

            </div>
            

            <div class="form-group pt-3">
                <input type="submit" value="Créer l'évènement" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a  asp-action="Index">Retour au menu</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
