@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager
@model TicketsJO.Models.Event

@{
    ViewData["Title"] = "Details";
}

<div class="container" style="background: linear-gradient(to right, rgba(0, 85, 164, 0.2), rgba(255, 255, 255, 0.2), rgba(239, 65, 53, 0.2)); padding: 20px;">
    <h1 class="fw-bold text-center py-3"> @Model.Description</h1>
    <h2 class="featurette-heading fw-normal lh-1 my-3 text-center">@Model.Description</h2>
    <p class="lead text-center"><strong>Date :</strong> @(Model.DateEvent.HasValue ? Model.DateEvent.Value.ToString("dd MMMM yyyy 'à' H:mm", new System.Globalization.CultureInfo("fr-FR")) : "Non spécifié")
    <p class="lead text-center pb-3"><strong>Lieu :</strong> @Html.DisplayFor(model => model.AdresseEvent)</p>
</div>

<div class="container mt-3">
    <h2 class="pb-2 border-bottom">Découvrez les offres</h2>
    @if (Model.Offers != null && Model.Offers.Any())
    {
        <div class="row row-cols-1 row-cols-md-3 mb-3 text-center">
            @foreach (var item in Model.Offers)
            {
                <div class="col">
                    <div class="card mb-4 rounded-3 shadow-sm">
                        <div class="card-header">
                            <h3>@Html.DisplayFor(modelItem => item.Description)</h3>
                        </div>
                        <div class="card-body">
                            <h4 class="card-title pricing-card-title">@Html.DisplayFor(modelItem => item.Prix) €</h4>
                            <h4>@Html.DisplayFor(modelItem => item.Description)</h4>
                            <h4>@Html.DisplayFor(modelItem => item.OffreID)</h4>
                            <p class="w-100 btn btn-lg btn-outline-primary">
                                @Html.ActionLink("Ajouter au panier", "AddToCart", "ShoppingCart", new { id = item.OffreID }, "")
                            </p>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else
    {
        <p>Aucune offre disponible pour cet événement</p>
        @if (SignInManager.IsSignedIn(User) && (User.IsInRole("Admin")))
        {
            <a class="btn btn-primary" asp-controller="Offers" asp-action="Create">Créer des offres</a>
        }
    }
</div>

<div class="mt-3">
    @if (SignInManager.IsSignedIn(User) && (User.IsInRole("Admin")))
    {
        <a class="btn btn-warning" asp-action="Edit" asp-route-id="@Model?.Id">Modifier l'évènement</a>
    }
    <a asp-action="Index" class="btn btn-primary">Retour au menu</a>
</div>
