@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Gestion Juex olympiques Parix 2024</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/TicketsJO.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-black border-bottom box-shadow mb-3">
            <div class="container-fluid">

                <a class="navbar-brand  text-white" asp-area="" asp-controller="Home" asp-action="Index">Accueil</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                    <ul class="navbar-nav flex-grow-1">

                        @if (SignInManager.IsSignedIn(User) && (User.IsInRole("Organizer") || (User.IsInRole("Admin"))))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Events" asp-action="Index">Organiser</a>
                            </li>
                        }

                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="EventRegistrations" asp-action="Index">Participer</a>
                            </li>

                        }

                        @if (SignInManager.IsSignedIn(User) && (User.IsInRole("Admin")))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Users" asp-action="Index">Gestion Utilisateurs</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Admin" asp-action="UserList">Rôles Utilisateurs</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="Disciplines" asp-action="Index">Gestion Disciplines</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-white" asp-controller="StatutEvents" asp-action="Index">Gestion Statut Evenement</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Role" asp-action="Index">Gestion Rôles</a>
                            </li>

                        }
                        @if (SignInManager.IsSignedIn(User))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-area="" asp-controller="Role" asp-action="GetMyRoles">Afficher mes Rôles</a>
                            </li>

                        }


                        <li class="nav-item">
                            <a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Privacy">Notre Politique</a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Jeux Olympiques Paris 2024 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Notre politique</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
