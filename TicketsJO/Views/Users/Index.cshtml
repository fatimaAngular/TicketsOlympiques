@model IEnumerable<TicketsJO.ViewModels.UserViewModel>

@{
    ViewData["Title"] = "Gestion utlisateurs";
}

<p>
    <a class="btn btn-outline-primary"  asp-action="Create">Ajouter un nouveau utilisateur</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
           @*  <th>
                @Html.DisplayNameFor(model => model.Password)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ConfirmPassword)
            </th> *@
            <th>
                @Html.DisplayNameFor(model => model.PhoneNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmailConfirmed)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
           @*  <td>
                @Html.DisplayFor(modelItem => item.Password)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ConfirmPassword)
            </td> *@
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmailConfirmed)
            </td>
            <td>
                    <a class="btn btn-outline-primary"  asp-action="Edit" asp-route-id="@item.Id">Modifier</a> 
                    <a class="btn btn-outline-primary"  asp-action="Details" asp-route-id="@item.Id">Details</a> 
                    <a class="btn btn-outline-primary" asp-action="Delete" asp-route-id="@item.Id">Supprimer</a>

               

            </td>
        </tr>
}
    </tbody>
</table>
