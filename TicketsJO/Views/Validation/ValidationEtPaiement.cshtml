@{
    Layout = "_Layout";
}

@model TicketsJO.Models.ShoppingCart

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8 col-md-10">
            <div class="card shadow-lg border-0 rounded">
                <div class="card-header bg-dark text-white text-center py-4">
                    <h2 class="card-title mb-0">Paiement Ticket</h2>              
                </div>
                <div class="card-body p-5">
                    <form asp-action="CompletePayment" method="post" class="needs-validation" novalidate>
                        <div class="text-center mb-4">
                            <i class="fas fa-credit-card fa-3x text-success"></i>
                        </div>
                        <div class="form-group mb-4">
                            <label for="cardName" class="form-label">Nom indiqué sur la carte</label>
                            <input type="text" class="form-control form-control-lg" id="cardName" placeholder="Nom complet" required pattern="[A-Za-zÀ-ÖØ-öø-ÿ\s]+" title="Utilisez uniquement des lettres et des espaces">
                            <div class="invalid-feedback">
                                Nom complet indiqué sur votre carte.
                            </div>
                        </div>
                        <div class="form-group mb-4">
                            <label for="cardNumber" class="form-label">Numéro de carte</label>
                            <div class="input-group">
                                <input type="text" class="form-control form-control-lg" id="cardNumber" placeholder="XXXX-XXXX-XXXX-XXXX" required pattern="\d{4}-\d{4}-\d{4}-\d{4}" title="Format attendu : 16 chiffres séparés par des tirets (XXXX-XXXX-XXXX-XXXX)">
                                <div class="invalid-feedback">
                                    Votre numéro de carte valide au format XXXX-XXXX-XXXX-XXXX.
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-4">
                                <label for="expirationDate" class="form-label">Date d'expiration</label>
                                <input type="text" class="form-control form-control-lg" id="expirationDate" placeholder="MM/YY" required pattern="\d{2}/\d{2}" title="Format attendu : MM/YY avec des chiffres">
                                <div class="invalid-feedback">
                                    La date d'expiration de votre carte.
                                </div>
                            </div>
                            <div class="col-md-6 mb-4">
                                <label for="cvv" class="form-label">CVV</label>
                                <input type="text" class="form-control form-control-lg" id="cvv" placeholder="123" required pattern="\d{3}" title="Entrez un CVV de 3 chiffres">
                                <div class="invalid-feedback">
                                    Le code CVV à 3 chiffres.
                                </div>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-outline-primary">
                            <i class="fas fa-lock"></i> Terminer le paiement
                        </button>
                        <button type="submit" class="btn btn-outline-primary">                           
                            <a  asp-area="" asp-controller="ShoppingCart" asp-action="Index">Annuler</a>
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
